<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Geeter.App">
    <Application.Resources>
        <!--<Color x:Key="PrimaryColor">#BE2623</Color>-->
        <!--<Color x:Key="PrimaryColor">#3273a8</Color>-->
        <Color x:Key="LightColor">#a9d6f5</Color>
        <Color x:Key="DarkColor">#142838</Color>
        <Color x:Key="GrayColor">#edf3f7</Color>
        <Color x:Key="DangerColor">#BE2623</Color>

        <!-- Font SIZES-->
        <x:Double x:Key="SmallSize">12</x:Double>
        <x:Double x:Key="NormalSize">14</x:Double>
        <x:Double x:Key="BigSize">18</x:Double>
        <x:Double x:Key="LargeSize">24</x:Double>
        <x:Double x:Key="LargerSize">30</x:Double>

        <Style x:Key="Buttons" TargetType="Button">
            <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="Padding" Value="30,0" />
            <Setter Property="CornerRadius" Value="25" />
        </Style>

    </Application.Resources>
</Application>